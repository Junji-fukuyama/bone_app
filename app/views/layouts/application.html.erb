<!DOCTYPE html>
<html>
  <head>
    <title>BoneApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="Header">
      <div class="Header__inner">
        <div class="Title">
          <%= link_to "BONE", root_path, class: :Title__appbtn %>
          <div class="Nav">
            <%= link_to "ユーザー名", root_path, class: :Nav__btn %>
            <%= link_to "ログアウト", "#", method: :delete, class: :Nav__btn %>
            <%= link_to  "投稿する", "#", class: :Nav__btn %>
            <%= link_to "ログイン", "#", class: :Nav__btn %>
            <%= link_to "新規登録", "#", class: :Nav__btn %>
          </div>
        </div>
      </div>
    </header>
    <%= yield %>
    <footer>
    </footer>
  </body>
</html>
