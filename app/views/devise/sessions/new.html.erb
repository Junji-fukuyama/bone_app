<div class="Session">
  <%= form_with model: @user, url: user_session_path, class: 'Session__user', local: true do |f| %>
    <h1>ログイン</h1>
    <%= devise_error_messages! %>
    <div class="Session__email">
      <%= f.label :email, "Eメール" %><br />
      <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true, autocomplete: "email" %>
    </div>
    <div class="Session__password">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, placeholder:"パスワードを入力して下さい", autocomplete: "password" %>
    </div>
    <div class="Session__btn">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
</div>